{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Reponse list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Attachement</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td><a href="{{ path('reponse_show', { 'id': reponse.id }) }}">{{ reponse.id }}</a></td>
                <td>{{ reponse.content }}</td>
                <td>{{ reponse.attachement }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reponse_show', { 'id': reponse.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reponse_edit', { 'id': reponse.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reponse_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
